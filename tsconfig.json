{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": true,
		"moduleResolution": "node",
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"ESNext",
			/*"WebWorker", do not include web workers because it conflicts with ESNext*/
			"DOM"
		],
		"outDir": "out"
	},
	"exclude": [
		"node_modules",
		"dist",
		"webpack.common.js",
		"webpack.dev.js",
		"webpack.prod.js",
	]
}
